{% extends 'base.html.twig' %}

{% block title %}Car index{% endblock %}

{% block body %}
    <h1 class="m-5 text-center">Tous nos véhicules disponibles</h1>


	<div class="container mx-auto mx-5">
        <div class="row">
            {% for car in cars %}
